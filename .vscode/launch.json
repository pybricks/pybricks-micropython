{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Download and Run",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ble",
                "${file}"
            ]
        },
        {
            "name": "Powered Up Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/pup/run_all.py",
            "cwd": "${workspaceFolder}/tests/pup",
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Motor Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/motors/run_test.py",
            "args": ["${file}", "--show"],
            "console": "integratedTerminal"
        },
        {
            "name": "Run via USB REPL",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "usb",
                "${file}"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name":"Virtual Hub Animation",
            "type":"debugpy",
            "request":"launch",
            "program":"${workspaceFolder}/lib/pbio/platform/virtual_hub/animation.py",
            "console":"integratedTerminal"
        },
        {
            "name": "virtualhub (no bluetooth)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bricks/virtualhub/build-debug/firmware.elf",
            "args": [
                "${workspaceFolder}/tests/virtualhub/basics/hello.py",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PBIO_TEST_CONNECT_SOCKET",
                    "value": "true"
                },
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore timer signal",
                    "text": "handle SIG34 noprint pass",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build virtualhub (debug)"
        },
{
            "name": "virtualhub with menu (no bluetooth)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bricks/virtualhub/build-debug/firmware.elf",
            "args": [
                "${workspaceFolder}/tests/virtualhub/basics/hello.py",
                "${workspaceFolder}/tests/virtualhub/color/basic.py",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PBIO_TEST_CONNECT_SOCKET",
                    "value": "true"
                },
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore timer signal",
                    "text": "handle SIG34 noprint pass",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build virtualhub (debug)"
        },
        {
            "name": "virtualhub (UB500_INDEX=0)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bricks/virtualhub/build-debug/firmware.elf",
            "args": [
                "${workspaceFolder}/tests/bluetooth/virtual0.py",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PBIO_TEST_CONNECT_SOCKET",
                    "value": "true"
                },
                {
                    "name": "UB500_INDEX",
                    "value": "0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore timer signal",
                    "text": "handle SIG34 noprint pass",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build virtualhub (debug)"
        },
        {
            "name": "virtualhub (UB500_INDEX=1)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bricks/virtualhub/build-debug/firmware.elf",
            "args": [
                "${workspaceFolder}/tests/bluetooth/virtual1.py",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PBIO_TEST_CONNECT_SOCKET",
                    "value": "true"
                },
                {
                    "name": "UB500_INDEX",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore timer signal",
                    "text": "handle SIG34 noprint pass",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build virtualhub (debug)"
        },
        {
            "name": "test-pbio",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lib/pbio/test/build/test-pbio",
            "args": [
                "--no-fork",
                "${input:pbioTestName}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PBIO_TEST_TIMEOUT",
                    "value": "0"
                },
                {
                    "name": "PBIO_TEST_RESULTS_DIR",
                    "value": "${workspaceFolder}/lib/pbio/test/results"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore timer signal",
                    "text": "handle SIG34 noprint pass",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build test-pbio"
        },
        {
            "name": "debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "executable": "${workspaceRoot}/bricks/debug/build/firmware.elf",
            "preLaunchTask": "build debug",
            "device": "STM32F446ZE",
            "configFiles": [
                "openocd_stm32f4.cfg"
            ],
            "searchDir": [
                "${workspaceRoot}/bricks/debug"
            ]
        }
    ],
    "inputs": [
        {
            "id": "pbioTestName",
            "description": "test name",
            "type": "pickString",
            // should match output of `./test-pbio.sh --list-tests`
            "options": [
                "src/port_lump/test_boost_color_distance_sensor",
                "src/port_lump/test_boost_interactive_motor",
                "src/port_lump/test_technic_large_motor",
                "src/port_lump/test_technic_xl_motor",
                "drv/bluetooth/test_btstack_run_loop_contiki_timer",
                "drv/bluetooth/test_btstack_run_loop_contiki_poll",
                "drv/pwm/test_pwm_get",
                "drv/pwm/test_pwm_set_duty",
                "src/angle/test_scaling",
                "src/angle/test_rounding",
                "src/battery/test_battery_voltage_to_duty",
                "src/battery/test_battery_voltage_from_duty",
                "src/battery/test_battery_voltage_from_duty_pct",
                "src/color/test_rgb_to_hsv",
                "src/color/test_hsv_to_rgb",
                "src/color/test_color_to_hsv",
                "src/color/test_color_to_rgb",
                "src/color/test_color_hsv_compression",
                "src/drivebase/test_drivebase_basics",
                "src/light/test_light_animation",
                "src/light/test_color_light",
                "src/light/test_light_matrix",
                "src/light/test_light_matrix_rotation",
                "src/math/test_atan2",
                "src/math/test_clamp",
                "src/math/test_mult_and_scale",
                "src/math/test_sqrt",
                "src/servo/test_servo_basics",
                "src/servo/test_servo_stall",
                "src/servo/test_servo_gearing",
                "src/task/test_no_yield_task",
                "src/task/test_task_removed_when_complete",
                "src/task/test_task_cancelation",
                "src/task/test_task_removal",
                "src/trajectory/test_simple_trajectory",
                "src/trajectory/test_infinite_trajectory",
                "src/trajectory/test_position_trajectory",
                "src/util/test_uuid128_reverse_compare",
                "src/util/test_uuid128_reverse_copy",
                "src/util/test_oneshot",
                "sys/bluetooth/test_bluetooth",
                "sys/status/test_status",
            ]
        }
    ]
}
